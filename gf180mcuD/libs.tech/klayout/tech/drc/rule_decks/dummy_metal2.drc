if DUMMY && (METAL_LEVEL == '3LM' || METAL_LEVEL == '4LM' || METAL_LEVEL == '5LM' || METAL_LEVEL == '6LM')
  #================================================
  #----------------- Dummy METAL2 -----------------
  #================================================

  # Rule DM2.2b: Min Dummy metal line space (for DRC): 0.98
  logger.info('Executing rule DM2.2b')
  dm2_2b_l1 = metal2_dummy.space(0.98.um, euclidian)
  dm2_2b_l1.output('DM2.2b', 'DM2.2b : Min Dummy metal line space (for DRC): 0.98')
  dm2_2b_l1.forget

  # Rule DM2.3: Minimum space between dummy metal and circuit Metal line: 2
  logger.info('Executing rule DM2.3')
  dm2_3_l1 = metal2_dummy.separation(metal2, 2.um, euclidian)
  dm2_3_l1.output('DM2.3', 'DM2.3 : Minimum space between dummy metal and circuit Metal line: 2')
  dm2_3_l1.forget

  # Rule DM2.8: Minimum space between dummy metal and FuseTop, POLYFUSE, FUSEWINDOW_D, PMNDMY, MTPMK, OTP_MK: 6
  logger.info('Executing rule DM2.8')
  dm2_8_l1 = metal2_dummy.separation(fusetop, 6.um, euclidian)
  dm2_8_l1 += metal2_dummy.separation(polyfuse, 6.um, euclidian)
  dm2_8_l1 += metal2_dummy.separation(fusewindow_d, 6.um, euclidian)
  dm2_8_l1 += metal2_dummy.separation(pmndmy, 6.um, euclidian)
  dm2_8_l1 += metal2_dummy.separation(mtpmark, 6.um, euclidian)
  dm2_8_l1 += metal2_dummy.separation(otp_mk, 6.um, euclidian)
  dm2_8_l1.output('DM2.8', 'DM2.8 : Minimum space between dummy metal and FuseTop, POLYFUSE, FUSEWINDOW_D, PMNDMY, MTPMK, OTP_MK: 6')
  dm2_8_l1.forget

end
